# Multi-stage Dockerfile for Next.js dashboard (monorepo)
FROM node:20-alpine AS deps
WORKDIR /app
RUN corepack enable
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml turbo.json tsconfig.base.json ./
COPY packages ./packages
# Install and build only dashboard and its deps
RUN pnpm install --frozen-lockfile
RUN pnpm --filter @ai-coding-team/dashboard... build

FROM node:20-alpine AS runner
WORKDIR /app
ENV NODE_ENV=production
# Copy built app
COPY --from=deps /app/packages/dashboard/.next ./.next
COPY --from=deps /app/packages/dashboard/public ./public
COPY --from=deps /app/packages/dashboard/package.json ./package.json
# Runtime env
ENV PORT=3000
EXPOSE 3000
CMD ["node","node_modules/next/dist/bin/next","start","-p","3000"]

